# ============================================
# Database Configuration
# ============================================
# PostgreSQL 설정
# Docker 내부: postgresql://postgres:postgres@postgres:5432/rag_evaluation
# 로컬 개발: postgresql://postgres:postgres@localhost:5433/rag_evaluation
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=rag_evaluation
POSTGRES_PORT=5433
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/rag_evaluation

# ============================================
# Qdrant Configuration
# ============================================
# Docker 내부: http://qdrant:6333
# 로컬 개발: http://localhost:6335
QDRANT_URL=http://localhost:6335
QDRANT_PORT=6335
QDRANT_API_KEY=

# ============================================
# Embedding Configuration
# ============================================
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DEVICE=auto
EMBEDDING_BATCH_SIZE=32

# ============================================
# File Storage
# ============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=50

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8001
CORS_ORIGINS=http://localhost:5174,http://localhost:3000

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO

# ============================================
# AI Services
# ============================================
# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_MODEL=claude-sonnet-4-20250514

# vLLM Services
# 각 vLLM 서버의 기본 URL 설정
VLLM_EMBEDDING_URL=http://localhost:8000
VLLM_RERANKING_URL=http://localhost:8002
VLLM_GENERATION_URL=http://localhost:8003

# ============================================
# Retrieval & Reranking Configuration
# ============================================
# Reranking 전 초기 검색 배수 (retrieve top_k * multiplier, then rerank to top_k)
# 권장값: 3-4 (기본값: 3)
RERANK_MULTIPLIER=3

# Top-K 검색 결과 수 (검색, 답변생성, 평가 전체에 적용)
DEFAULT_TOP_K=10
