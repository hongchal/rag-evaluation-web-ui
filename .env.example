# ==============================================
# RAG Evaluation - Unified Environment Variables
# ==============================================
# 이 파일을 복사해서 .env 파일을 생성하세요:
# cp .env.example .env

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=rag_evaluation
POSTGRES_PORT=5433
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/rag_evaluation

# Qdrant
QDRANT_PORT=6335
QDRANT_URL=http://localhost:6335
QDRANT_API_KEY=

# Embedding
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DEVICE=auto
EMBEDDING_BATCH_SIZE=32
EMBEDDING_DIMENSION=1024

# Chunking
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=50

# API
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:5174,http://localhost:3000

# Logging
LOG_LEVEL=INFO

# AI Services
ANTHROPIC_API_KEY=your-api-key-here
